{% extends 'base.html.twig' %}

{% block content %}

<h1 class="text-center mt-2">Connexion</h1>
<div class="mt-5 d-flex justify-content-center">
    <form action="{{ path('user_login') }}" method="post">
        <div class="form-group">
            <label>Login</label>
            <input type="text" class="form-control" placeholder="login" name="_username" required></input>
        </div>
        <div class="form-group">
            <label>mot de passe</label>
            <input type="password" class="form-control" placeholder="mot de passe" name="_password" required></input>
        </div>
        </br>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"></input>
        <button type="submit" class="btn btn-info">connexion</button>
    </form>
</div>

{% endblock %}